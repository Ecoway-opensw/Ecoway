<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리별 쓰레기"
                android:textColor="#000000"
                android:textSize="35sp"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp" />

            <Button
                android:id="@+id/reuse_button"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text=" 가구/인테리어"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button2"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-73dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="left|center_vertical"
                android:text="          가전제품    "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button3"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="    생활용품    "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button4"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-73dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="    욕실용품    "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button5"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="    주방용품    "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button6"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-73dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="       식품       "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button7"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="  용기/포장제  "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />

            <Button
                android:id="@+id/reuse_button8"
                android:layout_width="180dp"
                android:layout_height="73dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-73dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="   패션/잡화   "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#A9D998" />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>